<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="连接设备"
        android:textColor="#999999"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="160dip"
            android:layout_height="160dip"

            >

            <com.blue.blueapplication.widgets.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="160dip"
                android:layout_height="160dip"
                android:layout_centerInParent="true"
                android_custom:roundColor="#DdDdDd"
                android_custom:roundProgressColor="#5ed7e7"
                android_custom:roundWidth="10dip"
                android_custom:textColor="#9A32CD"
                android_custom:textIsDisplayable="true"
                android_custom:style ="STROKE"
                android_custom:textSize="18sp" />



        </RelativeLayout>
        <ListView
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:cacheColorHint="#00000000"
            android:divider="#eeeeee"
            android:dividerHeight="0dip"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:layout_marginTop="15dp"
            android:scrollingCache="false">

        </ListView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请打开设备"
            android:textColor="#999999"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="手机要求iPhone4s  7.0或Android4.3系统以上"
            android:textColor="#999999"
            android:textSize="12sp" />



    </LinearLayout>



</RelativeLayout>
